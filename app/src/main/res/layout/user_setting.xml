<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/basicbg">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:src="@drawable/logo"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/logo"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="8dp"
        android:textSize="17sp"
        android:text="O V E R W A T C H"
        android:textColor="@color/teks"
        android:textStyle="bold"
        />

    <ImageView
        android:id="@+id/profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="40dp"
        android:src="@drawable/circleiconsetting"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/person"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="98dp"
        />

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teks"
        android:layout_toRightOf="@id/profile"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="80dp"
        android:text="L o r e m   I p s u m"
        android:textStyle="bold"
        android:textSize="24sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teks"
        android:layout_toRightOf="@id/profile"
        android:layout_below="@+id/nama"
        android:layout_marginLeft="25dp"
        android:text="Lorem@Gmail.com"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:text="A  c  c  o  u  n  t"
        android:textColor="@color/teks"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teks"
        android:textStyle="italic"
        android:layout_below="@id/account"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="_______________________________________________________"
        />

    <TextView
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E d i t   A c c o u n t                                           >"
        android:textColor="@color/teks"
        android:layout_below="@+id/line1"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C h a n g e   L o c a t i o n                                 >"
        android:textColor="@color/teks"
        android:layout_below="@+id/edit"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/privacy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P r i v a c y   A n d   S e c u r i t y                      >"
        android:textColor="@color/teks"
        android:layout_below="@+id/location"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="S o c i a l                                                             >"
        android:textColor="@color/teks"
        android:layout_below="@+id/privacy"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/social"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="35dp"
        android:text="N o t i f i c a t i o n s"
        android:textColor="@color/teks"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/teks"
        android:textStyle="italic"
        android:layout_below="@id/notif"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:text="_______________________________________________________"
        />

    <TextView
    android:id="@+id/notifreport"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="A l l o w   R e p o r t   N o t i f i c a t i o n "
    android:textColor="@color/teks"
    android:layout_below="@+id/line2"
    android:layout_marginLeft="35dp"
    android:layout_marginTop="15dp"
    android:textSize="16sp"
    />

    <CheckBox
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_below="@+id/line2"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:layout_marginTop="12dp"
    />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="32dp"
        android:layout_marginRight="25dp"
        android:text="L o g   O u t"
        android:layout_below="@id/notifreport"
        android:background="@drawable/logout"
        android:backgroundTint="#FF0000"
        />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/round_edge"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/report"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="38dp"
        android:layout_marginLeft="22dp"
        />

    <TextView
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_edge" />

    <ImageView
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/map"
        android:layout_marginBottom="38dp"
        />

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@drawable/round_edge"
        />

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings"
        android:layout_marginBottom="38dp"
        android:layout_marginRight="22dp"
        />

</RelativeLayout>