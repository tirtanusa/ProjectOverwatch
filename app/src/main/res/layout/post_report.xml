<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_black">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Briefly explain the report you want to make :"
        android:textColor="@color/white"
        android:fontFamily="@font/lexendgigalight"
        android:textSize="12sp"
        android:layout_marginLeft="19dp"
        app:layout_constraintBottom_toTopOf="@id/reportColumn"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/reportColumn"
        android:layout_width="373dp"
        android:layout_height="48dp"
        android:layout_marginTop="276dp"
        android:background="@drawable/round_edge"
        android:fontFamily="@font/lexendgigalight"
        android:hint="Example : Crime scene, Shooting, Wildfire, etc"
        android:textColor="@color/white"
        android:paddingHorizontal="10dp"
        android:textColorHint="@color/hint_color"
        android:textSize="11sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="88dp"
        android:layout_height="81dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_edge"
        android:paddingHorizontal="12dp"
        android:paddingVertical="15dp"
        android:src="@drawable/plus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:fontFamily="@font/lexendgiga"
        android:text="Post A Report"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>